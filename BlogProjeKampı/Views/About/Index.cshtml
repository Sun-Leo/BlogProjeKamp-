@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<html lang="zxx">

<body>

	<!--/main-->
	<section class="main-content-w3layouts-agileits">
		<div class="container">
			<h3 class="tittle">About</h3>
			<div class="row inner-sec">
				<!--left-->
				@foreach(var item in Model)
				{
									
				<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
					<div class="blog-grid-top">

						<div class="blog_info_left_grid">
							<a href="single.html">
								<img src="~/CoreBlogTema/images/b5.jpg" class="img-fluid" alt="">
							</a>
						</div>
						<h3>
							Blog Nedir?
						</h3>
						<p>
							@item.AboutDetails1
						</p>
						<a href="/Blog/Index" class="btn btn-primary read-m">Anasayfa</a>
					</div>
					
				</div>
				}
				<!--//left-->
				<!--right-->
				<aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
					<div class="right-blog-info text-left">
						<div class="tech-btm">
							<img src="~/CoreBlogTema/images/banner1.jpg" class="img-fluid" alt="">
						</div>
						@await Html.PartialAsync("~/Views/NewsLetter/PartialSubscribe.cshtml")
						<div class="tech-btm widget_social">
							<h4>Sosyal Medya Hesaplarımız</h4>
							<ul>

								<li>
									<a class="twitter" href="#">
										<i class="fab fa-twitter"></i>
										<span class="count">317K</span> Twitter Followers
									</a>
								</li>
								<li>
									<a class="facebook" href="#">
										<i class="fab fa-facebook-f"></i>
										<span class="count">218k</span> Twitter Followers
									</a>
								</li>
								<li>
									<a class="dribble" href="#">
										<i class="fab fa-dribbble"></i>

										<span class="count">215k</span> Dribble Followers
									</a>
								</li>
								<li>
									<a class="pin" href="#">
										<i class="fab fa-pinterest"></i>
										<span class="count">190k</span> Pinterest Followers
									</a>
								</li>

							</ul>
						</div>
						
						<div class="tech-btm">
							<h4>Son Bloglar</h4>

							@await Component.InvokeAsync("WriterLastBlog")
						</div>
					</div>

				</aside>
				<!--//right-->
			</div>
		</div>
	</section>
	<!--//main-->


</body>

</html>

