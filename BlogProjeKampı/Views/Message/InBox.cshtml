@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/Writer_Layout.cshtml";
}

<h1>Gelen Kutusu</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.MessageID</td>
            <td>@item.Subject</td>
            <td>@item.SenderUser.WriterName</td>
            <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
            <td><a href="/Message/MessageDetail/@item.MessageID" class="btn btn-outline-info">Mesajı Aç</td>
        </tr>
    }
</table>
<a href="/Message/SendMessage" class="btn btn-primary">Yeni Mesaj Oluştur</a>
<br /> <br />
<a href="/Message/SendBox" class="btn btn-primary">Giden Kutusu</a>
