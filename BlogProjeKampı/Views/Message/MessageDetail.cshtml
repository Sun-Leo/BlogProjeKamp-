@using EntityLayer.Concrete
@model Message2
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Shared/Writer_Layout.cshtml";
}

<h1>Mesaj Detayı</h1>
<br />
<div class="container">
    <br />
    @Html.HiddenFor(x=>x.MessageID)
    <label>Gönderen</label>
    @Html.TextBoxFor(x=>x.SenderID, new{ @class="form-control"})
    <br />
    <label>Mesaj</label>
    @Html.TextAreaFor(x=>x.MessageDetails,10,3, new{ @class="form-control"})
    <br />
    <a href="/Message/InBox/" class="btn btn-primary">Geri Dön</a>
</div>

