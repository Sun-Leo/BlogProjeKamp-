@model Writer
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/Writer_Layout.cshtml";
}
@*<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/js/site.js"></script>*@

@using(Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil</h4>
                <p class="card-description"> Bilgiler </p>
                <br>
                @Html.HiddenFor(x=>x.WriterID, new{ @class="form-control"})

                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Adı:</label>
                        @Html.TextBoxFor(x=>x.WriterName, new{ @class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail Adresi</label>
                        @Html.TextBoxFor(x=>x.WriterMail, new{ @class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Şehir</label>
                        @Html.TextBoxFor(x=>x.CityID, new{ @class="form-control"})
@*                        @Html.DropDownListFor(x=>x.CityID,(List<SelectListItem>)ViewBag.city, new{ @class="form-control"})
*@                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifreniz</label>
                       @Html.PasswordFor(x=>x.WriterPassword, new{ @class="form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterPassword,"", new{ @class="text-danger"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifrenizi Tekrar Giriniz</label>
                        @Html.PasswordFor(x=>x.ConfirmPassword, new{ @class="form-control"})
                        @Html.ValidationMessageFor(x=>x.ConfirmPassword,"", new{ @class="text-danger"})

                    </div>
                  
                    <div class="form-group">
                        <label>Görsel</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary" type="button">Fotoğraf Seç</button>
                            </span>
                        </div>
                    </div>
                  
                    <div class="form-group">
                        <label for="exampleTextarea1">Yazar Hakkında</label>
                        @Html.TextAreaFor(x=>x.WriterAbout,10,3, new{ @class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2" >Gönder</button>
                   @* <script>
                        $("#alert").click((function)
                                            {
                                swal("Güncelleme!", "Bilgileriniz güncellenecektir.");
                            })
                    </script>*@
                    <button class="btn btn-light">Vazgeç</button>
                </form>

              

            </div>
        </div>
    </div>
}

