@using BlogProjeKampı.Areas.Admin.Models
@model RegisterAdminViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Kayıt Ol</title>

    <link href="~/AdminTema/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/AdminTema/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/AdminTema/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/AdminTema/css/animate.css" rel="stylesheet">
    <link href="~/AdminTema/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">Kayıt+</h1>

            </div>
            <h3>Kayıt Ol + </h3>
            <p>Hesap Oluşturun..</p>
            <form class="m-t"  method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Ad Soyad" name="NameSurmane">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Kullanıcı Adı" name="UserName">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Email" name="Mail">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Şifre" name="Password">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Şire Tekrarı" name="ConfirmPassword">
                </div>
                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Şartları Kabul Ediyorum </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small>Zaten Hesabınız var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Admin/LoginAdmin/Index/">Giriş Yap</a>
            </form>
            <p class="m-t"> <small>@DateTime.Now.Year</small> </p>
        </div>
    </div>

    <script src="~/AdminTema/js/jquery-3.1.1.min.js"></script>
    <script src="~/AdminTema/js/popper.min.js"></script>
    <script src="~/AdminTema/js/bootstrap.js"></script>
    <script src="~/AdminTema/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>

