@using BlogProjeKampı.Areas.Admin.Models
@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<form method="post" action="AssignRole">
    @for(int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
@*            <input type="hidden" @TempData["Userid"] />
*@            <input type="hidden" name="@Model[i].RoleID" value="RoleID"/>
            <input type="hidden" name="@Model[i].Name" value="Name"/>
            <input type="checkbox" name="@Model[i].Exists" class="form-check-input" value="Exists"/>
            <label class="form-check-label" for="@Model[i].Exists">@Model[i].Name</label>
        </div>
    }
    <br />
    <button class="btn btn-outline-info">Kaydet</button>
</form>
<br />
<a href="/Admin/AdminRole/UserRoleList/" class="btn btn-outline-primary">Geri Dön</a>

